<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.loan_information.fragment.LoanInformationFragment">

    <TextView
        android:id="@+id/last_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:text="@string/last_name"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintBaseline_toBaselineOf="@id/last_name_et"
        />

    <TextView
        android:id="@+id/first_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:text="@string/first_name"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintBaseline_toBaselineOf="@id/first_name_et"
        app:layout_constraintTop_toBottomOf="@id/last_name_tv"
        />

    <TextView
        android:id="@+id/mobile_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:text="@string/telephone_number"
        android:layout_marginEnd="@dimen/margin_end_20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintBaseline_toBaselineOf="@id/mobile_number_et"
        app:layout_constraintTop_toBottomOf="@id/first_name_tv"
        />

    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:text="@string/loan_amount"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintBaseline_toBaselineOf="@id/amount_et"
        app:layout_constraintTop_toBottomOf="@id/mobile_number_tv"
        />

    <TextView
        android:id="@+id/percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBaseline_toBaselineOf="@id/percent_et"
        android:text="@string/percent"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/amount_tv"
        />

    <TextView
        android:id="@+id/loan_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:text="@string/status_loan"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintBaseline_toBaselineOf="@id/loan_status_et"
        app:layout_constraintTop_toBottomOf="@id/percent_tv"
        />

    <TextView
        android:id="@+id/period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:text="@string/period"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/loan_status_tv"
        app:layout_constraintBaseline_toBaselineOf="@id/period_et"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:barrierDirection="end"
        app:constraint_referenced_ids="mobile_number_tv"
        />

    <EditText
        android:id="@+id/last_name_et"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        android:layout_marginStart="@dimen/margin_10dp"
        android:enabled="false"
        android:importantForAutofill="no"
        android:inputType="text"
        android:hint="@string/last_name"
        />

    <EditText
        android:id="@+id/first_name_et"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/last_name_et"
        android:layout_marginStart="@dimen/margin_10dp"
        android:enabled="false"
        android:inputType="text"
        android:hint="@string/first_name"
        android:importantForAutofill="no"
        />

    <EditText
        android:id="@+id/mobile_number_et"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/first_name_et"
        android:layout_marginStart="@dimen/margin_10dp"
        android:enabled="false"
        android:inputType="phone"
        android:hint="@string/mobile_number"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/amount_et"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/mobile_number_et"
        android:layout_marginStart="@dimen/margin_10dp"
        android:enabled="false"
        android:inputType="number"
        android:importantForAutofill="no"
        />

    <EditText
        android:id="@+id/percent_et"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/amount_et"
        android:layout_marginStart="@dimen/margin_10dp"
        android:enabled="false"
        android:inputType="number"
        android:importantForAutofill="no"
        />

    <EditText
        android:id="@+id/loan_status_et"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/percent_et"
        android:layout_marginStart="@dimen/margin_10dp"
        android:enabled="false"
        android:importantForAutofill="no"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/period_et"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier"
        android:layout_marginStart="@dimen/margin_10dp"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/loan_status_et"
        android:importantForAutofill="no"
        android:inputType="number"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_10dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_10dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/margin_8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
